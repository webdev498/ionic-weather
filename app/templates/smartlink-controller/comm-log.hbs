<header class="bar bar-nav weathermatic-header">
  {{#link-to 'smartlink-controller' class='btn btn-link btn-nav pull-left'}}
    <span class="icon icon-left-nav"></span>
  {{/link-to}}
  <h1 class="title">{{fa-icon 'list'}} {{short-text smartlinkController.name size=10}} - Comm Log</h1>
</header>

<div class="content weathermatic-content">
  <ul class="table-view">
    {{#each instruction in model}}
      {{instruction-item instruction=instruction}}
    {{else}}
      <li class="table-view-cell">
        <center>
          {{fa-icon 'times'}} No history for this controller
        </center>
      </li>
    {{/each}}
  </ul>
</div>
