<header class="bar bar-nav weathermatic-header weathermatic-left-nav-only">
  {{#link-to 'smartlink-controller' class='btn btn-link btn-nav pull-left'}}
    <span class="icon icon-left-nav"></span>
  {{/link-to}}
  <h1 class="title">{{fa-icon 'fa-clipboard spaced-icon'}} {{short-text smartlinkController.name size=15}} Inspections</h1>
</header>

<div class="content weathermatic-content">
  <ul class="table-view weathermatic-page-bottom">
    <li class="table-view-cell table-view-divider">
      {{fa-icon 'leaf'}} Select an Inspection to run
    </li>
    <li class="table-view-cell">
        {{#link-to 'smartlink-controller.edit-inspection' class='push-right'}}
          Create Inspection
        {{/link-to}}
    </li>
    {{#each model as |zone|}}
      <li class="table-view-cell">
        {{#link-to 'smartlink-controller.run-zone' zone.id class='push-right'}}
          {{#if zone.description}}
            {{zone.description}}
            <p>Zone {{zone.number}}</p>
          {{else}}
            Run Zone {{zone.number}}
            <p>&nbsp;</p>
          {{/if}}
        {{/link-to}}
      </li>
    {{else}}
      <li class="table-view-cell weathermatic-error-list-item">
        <center>
          <h1 class="weathermatic-warning-icon">
            {{fa-icon 'warning fa-3x'}}
          </h1>
          <h4>
            No zones set up for this controller
          </h4>
        </center>
      </li>
    {{/each}}
  </ul>
</div>