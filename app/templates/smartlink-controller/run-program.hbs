<header class="bar bar-nav">
  {{#link-to 'smartlink-controller.select-program' class='btn btn-link btn-nav pull-left'}}
    <span class="icon icon-left-nav"></span>
  {{/link-to}}
  <h1 class="title">{{fa-icon 'signal'}} {{model.site.name}} Run Program</h1>
</header>

<div class="content">
  <ul class="table-view">
    <li class="table-view-cell table-view-divider">
      Confirm Program
    </li>
    <li class="table-view-cell">
      Site <button class="btn btn-outlined btn-primary"> {{fa-icon 'building'}} Mega Museum</button>
    </li>
    <li class="table-view-cell">
      Controller <button class="btn btn-outlined btn-primary"> {{fa-icon 'signal'}} Main Lawn</button>
    </li>
  </ul>

  <div class="content-padded">
    <p>We're about to run</p>
  </div>
  <span class="btn btn-block weathermatic-btn-run-program weathermatic-btn-run-program-a">
    <h3>{{fa-icon 'play'}} Program A</h3>
  </span>

  <div class="content-padded">
    <p>Ready?</p>

    {{#link-to 'smartlink-controller' class='btn btn-block btn-positive'}}
      {{fa-icon 'check'}} Go!
    {{/link-to}}

    {{#link-to 'smartlink-controller' class='btn btn-block btn-negative'}}
      {{fa-icon 'times-circle'}} Cancel
    {{/link-to}}
  </div>
</div>
