<header class="bar bar-nav weathermatic-header">
  {{#link-to 'smartlink-controller' class='btn btn-link btn-nav pull-left'}}
    <span class="icon icon-left-nav"></span>
  {{/link-to}}

  <h1 class="title">{{fa-icon 'gear'}} Settings</h1>
</header>

<div class="content weathermatic-content">
  {{need-send-message smartlinkController=model transmit='transmit'}}

  <ul class="table-view">
    <li class="table-view-cell">
      {{#link-to 'smartlink-controller.settings.programming'}}
        <div class="media-body">
          <h2>{{fa-icon 'play spaced-icon'}} Programming</h2>
          <p>Edit programming settings</p>
        </div>
      {{/link-to}}
    </li>
    <li class="table-view-cell">
      {{#link-to 'smartlink-controller.settings.flow'}}
        <div class="media-body">
          <h2>{{fa-icon 'filter spaced-icon'}} Flow Settings</h2>
          <p>Edit flow settings</p>
        </div>
      {{/link-to}}
    </li>
    <li class="table-view-cell">
      {{#link-to 'smartlink-controller.settings.edit-controller-basic'}}
        <div class="media-body">
          <h2>{{fa-icon 'gear spaced-icon'}} Basic Settings</h2>
          <p>Edit basic controller settings</p>
        </div>
      {{/link-to}}
    </li>
    <li class="table-view-cell">
      {{#link-to 'smartlink-controller.settings.edit-controller-advanced'}}
        <div class="media-body">
          <h2>{{fa-icon 'gears spaced-icon'}} Advanced Settings</h2>
          <p>Edit advanced controller settings</p>
        </div>
      {{/link-to}}
    </li>
  </ul>
</div>

{{!
  `actionReceiver` attribute exposes component action to the outside world.
  Uses this add-on: https://github.com/GavinJoyce/ember-component-inbound-actions
}}
{{loading-modal actionReceiver=loadingModal loadingFinished='loadingFinished' loadingAbandoned='loadingAbandoned'}}
