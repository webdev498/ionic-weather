<header class="bar bar-nav weathermatic-header weathermatic-left-nav-only">
  {{#link-to 'smartlink-controller' class='btn btn-link btn-nav pull-left'}}
    <span class="icon icon-left-nav"></span>
  {{/link-to}}
  <h1 class="title">
    {{fa-icon 'signal'}} {{short-text smartlinkController.name size=15}} - Select Program
  </h1>
</header>

<div class="content weathermatic-content">
  <ul class="table-view">
    <li class="table-view-cell table-view-divider weathermatic-select-program-call-to-action">
      {{fa-icon 'play'}} Select a Program
    </li>
    {{#each program in controller}}
      <li {{bind-attr class=':table-view-cell :weathermatic-select-program program.cssClass'}}>
        {{#link-to 'smartlink-controller.run-program' program.model.id class='push-right'}}
          <h3>Run Program {{upper-case program.model.identifier}}</h3>
          {{#if program.model.description.length}}
            <p class="weathermatic-program-description">{{short-text program.model.description}}</p>
          {{/if}}
        {{/link-to}}
        <br>
      </li>
    {{else}}
      <li class="table-view-cell weathermatic-error-list-item">
        <center>
          <h1 class="weathermatic-warning-icon">
            {{fa-icon 'warning fa-3x'}}
          </h1>
          <h4>
            No programs set up for this controller
          </h4>
        </center>
      </li>
    {{/each}}
  </ul>

  <div class="content-padded">
    {{#link-to 'smartlink-controller' class='btn btn-block btn-negative'}}
      {{fa-icon 'times-circle'}} Cancel
    {{/link-to}}
  </div>
</div>
