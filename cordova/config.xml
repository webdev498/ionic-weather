<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="200113" id="com.smartlinknetwork.ios" ios-CFBundleVersion="3.1.116" version="2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <config-file parent="CFBundleShortVersionString" platform="ios">
        <string>2.3</string>
    </config-file>
    <name>Smartlink Mobile</name>
    <description>
      A remote control for Smartlink irrigation systems
    </description>
    <author email="support@weathermatic.com" href="http://cordova.io">
     Weathermatic Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="default" />
    <allow-navigation href="*" />
    <access origin="*" />
    <access launch-external="yes" origin="mailto:*" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="*" />
    <preference name="BackupWebStorage" value="local" />
    <platform name="ios">
        <icon height="60" src="res/ios/60pt_@2x.png" width="60" />
        <icon height="120" src="res/ios/60pt_@2x.png" width="120" />
        <icon height="180" src="res/ios/60pt_@2x.png" width="180" />
        <icon height="76" src="res/ios/76pt_@1x.png" width="76" />
        <icon height="152" src="res/ios/76pt_@2x.png" width="152" />
        <icon height="40" src="res/ios/40pt_@1x.png" width="40" />
        <icon height="80" src="res/ios/40pt_@2x.png" width="80" />
        <icon height="57" src="res/ios/57pt_@1x.png" width="57" />
        <icon height="114" src="res/ios/57pt_@2x.png" width="114" />
        <icon height="72" src="res/ios/72pt_@1x.png" width="72" />
        <icon height="144" src="res/ios/72pt_@2x.png" width="144" />
        <icon height="29" src="res/ios/29pt_@1x.png" width="29" />
        <icon height="58" src="res/ios/29pt_@2x.png" width="58" />
        <icon height="50" src="res/ios/50pt_@1x.png" width="50" />
        <icon height="100" src="res/ios/50pt_@2x.png" width="100" />
        <splash height="480" src="res/ios/splash_images/Default@2x-iPhone.png" width="320" />
