        <splash height="1024" src="res/ios/splash_images/Default@2x-iPad-Portrait.png" width="768" />
        <splash height="2048" src="res/ios/splash_images/Default@2x-iPad-Portrait.png" width="1536" />
        <splash height="768" src="res/ios/splash_images/Default@2x-iPad-Landscape.png" width="1024" />
        <splash height="1536" src="res/ios/splash_images/Default@2x-iPad-Landscape.png" width="2048" />
        <splash height="1136" src="res/ios/splash_images/Default@2x-iPhone-Tall.png" width="640" />
        <splash height="1334" src="res/ios/splash_images/Default@2x-iPhone-Tall.png" width="750" />
        <splash height="2208" src="res/ios/splash_images/Default@3x-iPhone.png" width="1242" />
        <splash height="1242" src="res/ios/splash_images/Default@3x-iPhone.png" width="2208" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-app-version" spec="git+https://github.com/whiteoctober/cordova-plugin-app-version.git" />
    <plugin name="cordova-plugin-console" spec="~1.0.5" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.6.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
</widget>
