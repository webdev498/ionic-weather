<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smartlinknetwork.ios"
  version="2.3"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
  android-versionCode="200083"
  ios-CFBundleVersion="2.3.2"
  >
    <config-file platform="ios" parent="CFBundleShortVersionString">
      <string>2.3</string>
    </config-file>

    <name>Smartlink Mobile</name>
    <description>
      A remote control for Smartlink irrigation systems
    </description>
    <author email="support@weathermatic.com" href="http://cordova.io">
     Weathermatic Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <allow-navigation href="*" />
    <access origin="*" />
    <access origin="mailto:*" launch-external="yes"/>
    <preference name="BackupWebStorage" value="local"></preference>
    <plugin name="Geolocation" value="org.apache.cordova.GeoBroker" />

    <platform name="ios">
      <!-- Icons -->

      <!-- iOS 7.0+ -->

      <!-- iPhone / iPod Touch  -->
      <icon src="res/ios/60pt_@2x.png" width="60" height="60" />
      <icon src="res/ios/60pt_@2x.png" width="120" height="120" />
      <icon src="res/ios/60pt_@2x.png" width="180" height="180"/>

      <!-- iPad -->
      <icon src="res/ios/76pt_@1x.png" width="76" height="76" />
      <icon src="res/ios/76pt_@2x.png" width="152" height="152" />

      <!-- iOS 6.1 -->

      <!-- Spotlight Icon -->
      <icon src="res/ios/40pt_@1x.png" width="40" height="40" />
      <icon src="res/ios/40pt_@2x.png" width="80" height="80" />

      <!-- iPhone / iPod Touch -->
      <icon src="res/ios/57pt_@1x.png" width="57" height="57" />
      <icon src="res/ios/57pt_@2x.png" width="114" height="114" />

      <!-- iPad -->
      <icon src="res/ios/72pt_@1x.png" width="72" height="72" />
      <icon src="res/ios/72pt_@2x.png" width="144" height="144" />

      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="res/ios/29pt_@1x.png" width="29" height="29" />
      <icon src="res/ios/29pt_@2x.png" width="58" height="58" />

      <!-- iPad Spotlight and Settings Icon -->
      <icon src="res/ios/50pt_@1x.png" width="50" height="50" />
      <icon src="res/ios/50pt_@2x.png" width="100" height="100" />

      <!-- Splash Screens -->
      <splash src="res/ios/splash_images/Default@2x-iPhone.png" width="320" height="480"/>
      <splash src="res/ios/splash_images/Default@2x-iPhone.png" width="640" height="960"/>
      <splash src="res/ios/splash_images/Default@2x-iPad-Portrait.png" width="768" height="1024"/>
      <splash src="res/ios/splash_images/Default@2x-iPad-Portrait.png" width="1536" height="2048"/>
      <splash src="res/ios/splash_images/Default@2x-iPad-Landscape.png" width="1024" height="768"/>
      <splash src="res/ios/splash_images/Default@2x-iPad-Landscape.png" width="2048" height="1536"/>
      <splash src="res/ios/splash_images/Default@2x-iPhone-Tall.png" width="640" height="1136"/>
      <splash src="res/ios/splash_images/Default@2x-iPhone-Tall.png" width="750" height="1334"/>
      <splash src="res/ios/splash_images/Default@3x-iPhone.png" width="1242" height="2208"/>
      <splash src="res/ios/splash_images/Default@3x-iPhone.png" width="2208" height="1242"/>
    </platform>
</widget>
